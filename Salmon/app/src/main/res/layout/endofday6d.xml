<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="25px"
        android:minWidth="25px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="25px"
            android:minWidth="25px"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/question_F"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@id/q5_sb4r"
                android:id="@+id/q6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Instant Messaging"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@id/q6"
                android:id="@+id/q6_tm"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/q6_tm"
                android:id="@+id/q6_sb10"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="0 hours"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@id/q6_sb10"
                android:id="@+id/q6_sb10l"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2 hours"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@id/q6_sb10"
                android:id="@+id/q6_sb10r"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/q6_sb10r"
                android:id="@+id/q6_sb11"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Not at all"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@id/q6_sb11"
                android:id="@+id/q6_sb11l"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Very positive"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@id/q6_sb11"
                android:id="@+id/q6_sb11r"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/q6_sb11r"
                android:id="@+id/q6_sb12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Not at all"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@id/q6_sb12"
                android:id="@+id/q6_sb12l"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Very negative"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@id/q6_sb12"
                android:id="@+id/q6_sb12r"/>

            <Button
                android:text="Next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/q6_sb12r"
                android:id="@+id/next6d"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>