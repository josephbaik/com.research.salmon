<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="25px"
        android:minWidth="25px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="25px"
            android:minWidth="25px"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/question_L"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@id/q11_sb1r"
                android:id="@+id/q12"/>

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/q12"
                android:id="@+id/q12_s1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="When thinking about your potential social interactions tomorrow...:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@id/q12_s1"
                android:id="@+id/q12_p1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="On average, to what extent do you expect you will interact effectively with others in these social situations? "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@id/q12_p1"
                android:id="@+id/q12_p2"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/q12_p2"
                android:id="@+id/q12_sb1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Not at all effectively"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@id/q12_sb1"
                android:id="@+id/q12_sb1l"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Very Effectively"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@id/q12_sb1"
                android:id="@+id/q12_sb1r"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="On average, to what extent do you expect to enjoy/dislike these social interactions?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@id/q12_sb1r"
                android:id="@+id/q12_p3"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/q12_p3"
                android:id="@+id/q12_sb2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Extremely dislike them"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@id/q12_sb2"
                android:id="@+id/q12_sb2l"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Extremely like them"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@id/q12_sb2"
                android:id="@+id/q12_sb2r"/>
            <Button
                android:text="Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/q12_sb2r"
                android:layout_alignParentRight="true"
                android:id="@+id/submitEnd" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
