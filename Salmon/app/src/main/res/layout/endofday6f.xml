<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="25px"
        android:minWidth="25px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="25px"
            android:minWidth="25px"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/question_F"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@id/q5_sb4r"
                android:id="@+id/q6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Social media"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@id/q6"
                android:id="@+id/q6_sm"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/q6_sm"
                android:id="@+id/q6_sb16"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="0 hours"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@id/q6_sb16"
                android:id="@+id/q6_sb16l"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2 hours"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@id/q6_sb16"
                android:id="@+id/q6_sb16r"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/q6_sb16r"
                android:id="@+id/q6_sb17"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Not at all"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@id/q6_sb17"
                android:id="@+id/q6_sb17l"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Very positive"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@id/q6_sb17"
                android:id="@+id/q6_sb17r"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/q6_sb17r"
                android:id="@+id/q6_sb18"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Not at all"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@id/q6_sb18"
                android:id="@+id/q6_sb18l"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Very negative"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@id/q6_sb18"
                android:id="@+id/q6_sb18r"/>



            <Button
                android:text="Next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/q6_sb18r"
                android:id="@+id/next6f"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>